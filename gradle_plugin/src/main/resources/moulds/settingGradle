File rootDir = settings.rootDir
File outIncludeFile = new File(rootDir,".modularization/include.gradle")
//try{
File targetBuild = new File(rootDir,".modularization/buildDir.lock")
if(targetBuild.exists()){
    gradle.beforeProjegradle.beforeProject { p->
        p.buildDir = "${rootProject.projectDir.absolutePath}/build/build_${p.name.toUpperCase()}"
    }
}

    new AutoInclude(gradle,rootDir,outIncludeFile).save()
    apply from: outIncludeFile.path
