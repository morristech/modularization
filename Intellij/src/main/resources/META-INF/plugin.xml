<idea-plugin>
    <id>com.pqixing.modularization.idea</id>
    <name>Modularization</name>
    <version>1.0</version>
    <vendor email="pqixing86@gmail.com" url="https://github.com/pqixing/modularization">pqixing
    </vendor>

    <description>
        Help to run modularization gradle plugin , provide ui operator for task!!
    </description>

    <change-notes>
        Help to run modularization gradle plugin , provide ui operator for task!!
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="148.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.android</depends>
    <actions>
        <group id="Modularization" class="com.pqixing.intellij.group.RootGroup" popup="true" text="Modularization">
            <add-to-group group-id="BuildMenu" anchor="first" />
            <add-to-group group-id="EditorPopupMenu" anchor="first" />
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
            <action id="ImportAction" class="com.pqixing.intellij.actions.ImportAction" text="Import" >
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
            </action>
            <action id="ToMavenAction" class="com.pqixing.intellij.actions.ToMavenAction" text="ToMaven" />

            <action id="ClearCache" class="com.pqixing.intellij.actions.ClearCache" text="ClearCache" />


            <action id="com.libiao.mvpcreator" class="com.dachen.creator.actions.MvpCreator" text="MvpCreator"
                description="auto create MVP code"/>
            <action id="com.libiao.routercreator" class="com.dachen.creator.actions.PathCreator" text="RouterCreator"
                description="router auto create code"/>
            <action id="com.libiao.modelcreator" class="com.dachen.creator.actions.ModelCreator" text="ModelCreator"
                description="auto create model code"/>
        </group>
    </actions>
</idea-plugin>